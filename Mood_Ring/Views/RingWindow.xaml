<Window x:Class="Mood_Ring.Views.RingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Mood_Ring.Controls"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize"
        Width="140" Height="140">
    <Border CornerRadius="100" Background="Transparent" MouseLeftButtonDown="Window_MouseLeftButtonDown" PreviewMouseWheel="Window_PreviewMouseWheel" >
        <controls:MoodRingControl Progress="{Binding CompositeScore}" />
    </Border>
</Window>